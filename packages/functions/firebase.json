{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "hosting": {
      "port": 8080
    },
    "functions": {
      "port": 8001
    },
    "firestore": {
      "port": 8002
    },
    "ui": {
      "enabled": true,
      "port": 8003
    }
  }
}
