{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [{
      "source": "**",
      "function": "ssr"
    }]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "ignore": ["node_modules", ".git", "firebase-debug.log"]
  },
  "emulators": {
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "hosting": { "port": 3000 },
    "ui": { "enabled": false },
    "singleProjectMode": true
  }
}
